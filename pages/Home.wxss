/* pages/Home.wxss */
.container {
  padding: 20rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

/* 搜索栏样式 */
.search-bar {
  margin-bottom: 30rpx;
}

.search-input {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.search-placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 通用区块样式 */
.section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.section-actions {
  display: flex;
}

.arrow-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.arrow {
  font-size: 40rpx;
  color: #999;
}

/* 推荐课程列表样式 */
.course-list {
  display: flex;
  overflow-x: auto;
  padding-bottom: 20rpx;
  -webkit-overflow-scrolling: touch;
}

.course-item {
  flex-shrink: 0;
  width: 300rpx;
  margin-right: 20rpx;
}

.course-img {
  width: 300rpx;
  height: 200rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}

.course-img-text {
  color: #666;
  font-size: 28rpx;
}

.course-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.course-time {
  font-size: 26rpx;
  color: #999;
}

/* 热门课程样式 */
.hot-courses {
  margin-top: 20rpx;
}

.hot-course-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.hot-course-item:last-child {
  border-bottom: none;
}

.hot-course-left {
  display: flex;
  align-items: center;
}

.rank-number {
  width: 40rpx;
  height: 40rpx;
  background-color: #ff6b6b;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.hot-course-info {
  flex: 1;
}

.hot-course-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 5rpx;
  display: block;
}

.rating {
  display: flex;
  align-items: center;
}

.star {
  color: #ffb800;
  font-size: 24rpx;
  margin-right: 5rpx;
}

.rating-score {
  font-size: 24rpx;
  color: #999;
}

.hot-course-time {
  font-size: 26rpx;
  color: #999;
}

/* 标签筛选样式 */
.tags {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.tag {
  padding: 15rpx 30rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.tag-active {
  background-color: #ff6b6b;
  color: #fff;
}

/* 滚动条隐藏 */
::-webkit-scrollbar {
  display: none;
}