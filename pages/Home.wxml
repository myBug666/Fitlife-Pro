<!--pages/Home.wxml-->
<view class="container">
  <!-- 搜索栏 -->
  <view class="search-bar">
    <view class="search-input">
      <image class="search-icon" src="/images/profile.png" mode="aspectFit"></image>
      <text class="search-placeholder">搜索课程或教练</text>
    </view>
  </view>

  <!-- 今日推荐课程 -->
  <view class="section">
    <view class="section-header">
      <text class="section-title">今日推荐课程</text>
      <view class="section-actions">
        <view class="arrow-btn">
          <text class="arrow">‹</text>
        </view>
        <view class="arrow-btn">
          <text class="arrow">›</text>
        </view>
      </view>
    </view>
    
    <view class="course-list">
      <view class="course-item" wx:for="{{recommendedCourses}}" wx:key="id" bindtap="navigateToCourseDetail" data-id="{{item.id}}">
        <view class="course-img">
          <text class="course-img-text">{{item.name}}</text>
        </view>
        <text class="course-name">{{item.name}}</text>
        <text class="course-time">{{item.timeStart}}</text>
      </view>
    </view>
  </view>

  <!-- 热门课程榜单 -->
  <view class="section">
    <text class="section-title">热门课程榜单</text>
    <view class="hot-courses">
      <view class="hot-course-item" wx:for="{{popularCourses}}" wx:key="id" bindtap="navigateToCourseDetail" data-id="{{item.id}}">
        <view class="hot-course-left">
          <view class="rank-number">{{index + 1}}</view>
          <view class="hot-course-info">
            <text class="hot-course-name">{{item.name}}</text>
            <view class="rating">
              <text class="star">★</text>
              <text class="rating-score">{{item.rating}}分</text>
            </view>
          </view>
        </view>
        <text class="hot-course-time">{{item.timeStart}}</text>
      </view>
    </view>
  </view>

  <!-- 标签筛选 -->
  <view class="section">
    <text class="section-title">标签筛选</text>
    <view class="tags">
      <view class="tag" wx:for="{{filterTags}}" wx:key="*this" bindtap="toggleTag" data-tag="{{item}}" 
        class="{{selectedTags.indexOf(item) > -1 ? 'tag-active' : ''}}">
        {{item}}
      </view>
    </view>
  </view>
</view>