.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
  padding: 0 30rpx;
}

.logo-container {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo-bg {
  width: 120rpx;
  height: 120rpx;
  background-color: #32CD32;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.app-subtitle {
  font-size: 24rpx;
  color: #969799;
}

.btn-container {
  width: 100%;
  max-width: 500rpx;
}

.login-btn {
  width: 100%;
  height: 90rpx;
  background-color: #07c160;
  color: white;
  font-size: 32rpx;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.login-btn::after {
  border: none;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.agreement {
  margin-top: 60rpx;
  text-align: center;
}

.agreement-text {
  font-size: 22rpx;
  color: #969799;
}